[core]
  excludesfile = /Users/gkoo/.gitignore_global
  editor = /usr/bin/vim
[user]
  name = Gordon Koo
  email = gordon.koo@airbnb.com
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

;[color "branch"]
  ;current = yellow reverse
  ;local = yellow
  ;remote = green

;[color "diff"]
  ;meta = yellow bold
  ;frag = magenta bold
  ;old = red bold
  ;new = green bold

;[color "status"]
  ;added = yellow
  ;changed = green
  ;untracked = cyan
[alias]
  st = status
  lg = log --decorate --graph --oneline -20
  br = branch
  ci = commit
  co = checkout
  chp = cherry-pick
  dif = difftool
  rb = rebase
  ps = push
  pl = pull
  prune-merged = ! "git branch --merged master | grep -v -E '^(\\* |  master$)' | xargs -n 1 git branch -d"
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[push]
	default = current
[pull]
	default = current
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[fetch]
	prune = true
[web]
	browser = open
[hub]
	host = git.airbnb.com
[branch]
	autosetupmerge = true ; When branching off a remote branch, automatically let the local branch track the remote branch
[rerere]
	enabled = 1
[pager]
	branch = false ; prevents `git branch` going into tty mode (aka "less" mode)
